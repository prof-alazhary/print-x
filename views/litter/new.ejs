<%- include('../partials/_header') %>
	<div id="contents">
		<form action="/api/litter/new" method="post" class="submit-form">
		<div class="section">
			<h1  align="center">خطاب جديد</h1>
			<div>
				<p>
					<h2>
						بيانات قائد المرور
					</h2>
				</p>
		

					<input name="destination" type="text" />

					<label for="dealer">التاجر:</label>
					<input name="dealer" type="text" />
					
					<hr>
			</div>
				<div style="width: 400px; float: right;">

						<p>
							<h2>
								بيانات المركبة
							</h2>
						</p>
		
						<label for="model">الطراز:</label>
						<input name="model" type="text" />

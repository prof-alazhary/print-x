<!DOCTYPE HTML>
<!-- Website template by freewebsitetemplates.com -->
<html>
<%
function getFormattedDate(date) {
    var year = date.getFullYear();
  
    var month = (1 + date.getMonth()).toString();
    month = month.length > 1 ? month : '0' + month;
  
    var day = date.getDate().toString();
    day = day.length > 1 ? day : '0' + day;
    
    return day + '/' + month + '/' + year;
}
%>
<head>
    <meta charset="UTF-8">
    <title><%=appConfig.appName%></title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/js/jquery-ui.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/static/css/style.css" type="text/css">
</head>

<body>
    <div id="header">
        <div>
            <div class="logo">
                <a href="/"></a>
            </div>
            <ul id="navigation">
                <li>
                    <a href="#">
                        <h2>اتصل بنا</h2>
                    </a>
                </li>
                <li>
					<a href="/logout">
						<h2>تسجيل خروج</h2>
					</a>
                </li>
                <li>
					<a href="/api/user/edit">
						<h2> بيانات المستخدم</h2>
					</a>
                </li>
                <li>
                    <a href="/api/litter/search">
                        <h2>بحث</h2>
                    </a>
                </li>
                <li class="active">
                    <a href="/api/litter/new">
                        <h2>خطاب</h2>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div id="contents">
        <div class="section">
                <h1  align="center">بحث عن خطاب </h1>
                <div class="search">
                        <form class="form-inline" action="/api/litter/search" method="POST">
                            <div class="form-group">
                                <input name="dealer" class="form-control" type="text" placeholder="اسم التاجر" >
                                <button type="submit" class="btn btn-primary">
                                <i class="glyphicon glyphicon-search" ></i>
                                </button>
                            </div>
                            <br>
                            <div class="form-group">
                                <input name="chassisNo" class="form-control" type="text" placeholder="رقم الشاسية">
                                <input name="motorNo" class="form-control" type="text" placeholder="رقم الموتور" >
                                <button type="submit" class="btn btn-primary">
                                <i class="glyphicon glyphicon-search" ></i>
                                </button>
                            </div>
                        </form>
                </div>
                
                <br>
                <%if(typeof litters!= 'undefined' && litters.length) {%>
                <div class="results">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th  >م</th>
                                <th  >التاجر</th>
                                <th >الموديل</th>
                                <th >الشاسية</th>
                                <th >الموتور</th>
                                <th >تاريخ الانشاء</th>
                                <th >تاريخ التعديل</th>
                                <th >خيارات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%litters.forEach((litter,idx)=>{%>
                            <tr>
                                <th ><%=idx+1%></th>
                                <th ><%=litter.dealer%></th>
                                <td><%=litter.machineData.model%></td>
                                <td><%=litter.machineData.chassisNo%></td>
                                <td><%=litter.machineData.motorNo%></td>
                                <td><%=getFormattedDate(litter.createdAt)%></td>
                                <td><%=litter.updatedAt ? getFormattedDate(litter.updatedAt) : '' %></td>
                                <td>
                                    <a href=<%=litter._id+'/edit'%> > <i class="glyphicon glyphicon-pencil"></i></a>  &nbsp  &nbsp
                                    <a href=<%=litter._id%> > <i class="glyphicon glyphicon-print"></i></a>
                                </td>
                            </tr>
                            <%})%>
                        </tbody>
                    </table>
                    <%}%>
                </div>
        </div>
    </div>

    <div id="footer">
        <div class="clearfix">
            <div id="connect">
                <a href="#" target="_blank" class="facebook"></a><a href="#" target="_blank" class="googleplus"></a><a
                    href="#" target="_blank" class="twitter"></a><a href="#" target="_blank" class="tumbler"></a>
            </div>
            <p>
                © 2020 Alazhary. All Rights Reserved.
            </p>
        </div>
    </div>
</body>

</html>